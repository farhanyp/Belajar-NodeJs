<h2>Halaman Contact</h2>
<a href="/contact/add" class="btn btn-primary mb-2"> Tambah Data Contact</a>
<% if (msg.length !== 0) { %>
  <div class="alert alert-info" role="alert">
    <%= msg %>
  </div>
<% } %>
<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama</th>
        <th scope="col">NoHp</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <tr>
        <% if (!contacts.length == 0) { %>
            <% contacts.forEach((contact, index) => { index++%>
                <tr>
                  <th scope="row"><%= index %></th>
                  <td><%= contact.nama %></td>
                  <td><%= contact.nohp %></td>
                  <td><a href="/contact/<%= contact.nama %>" class="btn btn-primary">Details</a></button></td>
                </tr>
            <% }) %>
        <% } else{ %>
            <td colspan="4">
                <div class="alert alert-danger" role="alert">
                Tidak ada data yang tersedia
                </div>
            </td>
        <% } %>
        </tr>
    </tbody>
  </table>
